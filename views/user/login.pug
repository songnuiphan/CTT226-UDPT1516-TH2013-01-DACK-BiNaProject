
extends ../layout/layout.pug

block content
  section
    .section-content
      .container
        .section-header.onscroll-animate(data-animation='fadeInLeft')
          h1 Đăng nhập
        .row
          .col-md-3
          // .col-md-3
          .col-md-6
            .row
              form.form-horizontal(role='form', method='post', action='/login')
                .form-group
                  label.control-label.col-sm-3(for='username') Tên đăng nhập:
                  .col-sm-9
                    input#username.form-control(type='text', name='username', placeholder='Nhập tên tài khoản')
                .form-group
                  label.control-label.col-sm-3(for='password') Mật khẩu:
                  .col-sm-9
                    input#password.form-control(type='password', name='password', placeholder='Nhập mật khẩu')
                .form-group
                  .col-sm-offset-3.col-sm-9
                    button.btn.btn-default(type='submit') Đăng nhập
